<h1>
    <%= @utilisateur.nom %>, <%= @utilisateur.email %>

  <% if @utilisateur.articles.any? %>
    <h3>Articles (<%= @utilisateur.articles.count %>)</h3>
    <ol class="articles">
      <%= render @articles %>

    </ol>
    <% articles = @utilisateur.articles %>
    <% articles.each do |article| %>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= article.titre %>&nbsp &nbsp &nbsp<%= article.category %>&nbsp &nbsp &nbsp<%= article.adresse %>&nbsp &nbsp &nbsp<%= article.prix %> </h3>
        </div>
        <div class="panel-body">
          <%= article.description %>  <br>
          <% if utilisateur_courant.nom == @utilisateur.nom %>
          <%= link_to "delete", article, method: :delete, data: { confirm: "confirmer" } %>
            <% end %>
          <br>
          <%= link_to "see more", article %>

        </div>
      </div>




    <% end %>
    <% else %>
    <h3>no articles. wanna post some?</h3>
  <% end %>

</h1>


